@model VideoShop.Models.RentReturn

@{
    ViewBag.Title = "Delete";
}

<h2>Returning movies</h2>

<h3>Are you sure you want to return this movie?</h3>
<div>
    <h4>Return a movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>      
        <dd>
            @Html.DisplayFor(model => model.RentStats.Customer.FirstName)
            </dd>   
        <dt>
            Last Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RentStats.Customer.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.RentStats.Movie.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RentStats.Movie.Title)
        </dd>
    </dl>
  
  

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Return" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
