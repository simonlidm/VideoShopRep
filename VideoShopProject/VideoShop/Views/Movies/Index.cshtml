@model IEnumerable<VideoShop.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form id="formSearch" method="post">
<div class="row" align="right" id="SearchBox">
    <div class="col-md-1">Title</div>
    <div class="col-md-2"><input type="text" id="Title" name="Title" /></div>
    <div class="col-md-1"><input type="submit" id="submitsearch" value="Search" /></div>
</div>
    </form>
<table class="table">
    <tr>
        <th>
           
            @Html.ActionLink("Order By Title", "OrderByTitle")
        </th>
        
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MovieId }) |
            @Html.ActionLink("Details", "Details", new { id=item.MovieId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MovieId })
        </td>
    </tr>
}

</table>
